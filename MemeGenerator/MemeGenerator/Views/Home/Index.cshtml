
@{
    ViewBag.Title = "Index";
}

@section links{
    <link href="~/Content/index.css" rel="stylesheet">
}
@if (Request.IsAuthenticated)
{
    if (((MemeGenerator.Security.CustomPrincipal)User).IsInRole("Moderator"))
    {
        <h2>Welcome to MemeGenerator, Moderator @User.Identity.Name !</h2>
    }
    else
    {
        <h2>Welcome to MemeGenerator, @User.Identity.Name !</h2>
    }
}
else
{
    <h2>Welcome to MemeGenerator!</h2>
}

<div class="form-horizontal">
    
    <input type="text" class="form-control" name="filter" id="filter"  />
    <button id="Search" class="btn btn-primary">Search</button>
    <button id="Clear" class="btn btn-success">Clear</button>
</div>

<ul id="list"></ul>

<script src="~/Scripts/index.js"></script>